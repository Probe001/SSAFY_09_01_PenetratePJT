<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.ssafy.boot.model.mapper.BookMapper">

	<!-- 전체 조회 -->
	<!-- <select id="selectAll" resultType="com.ssafy.book.dto.Book"> -->
	<select id="selectAll" resultType="Book"> <!-- 대소문자 가능 -->
		select * from book
	</select>

	<!-- 상세 조회(isbn) -->
	<select id="selectByIsbn" resultType="Book" parameterType="String">
		select * from book where isbn = #{isbn}
	</select>

	<!-- 등록 -->
	<insert id="registBook" parameterType="Book">
		insert into book (isbn, title, author, price, description)
		values (#{isbn},#{title},#{author},#{price},#{description})
	</insert>

	<!-- 삭제(isbn) -->
	<delete id="deleteByIsbn" parameterType="String">
		delete from book
		where isbn = #{isbn}
	</delete>

</mapper>